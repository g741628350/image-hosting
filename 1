    <script>
        // å…¨å±€å˜é‡
        let currentSearchQuery = '';
        let songListData = [];
        const MAX_RESULTS = 8; // é™åˆ¶æ˜¾ç¤ºç»“æœæ•°é‡
        
        // APIå¯†é’¥é…ç½® - ä½¿ç”¨Pythonæ’ä»¶ä¸­çš„é…ç½®
        const API_KEY = "DragonFDDA68329776FFD75860B96A08AE7D12";
        const API_BASE_URL = "https://sdkapi.hhlqilongzhu.cn/api/dgMusic_kugou/";
        // åˆ›å»ºç²’å­èƒŒæ™¯
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 3) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // æ¸…ç†æ–‡ä»¶åå‡½æ•°
        function cleanFileName(fileName) {
            if (!fileName) return 'unknown_song';
            
            // ç§»é™¤æˆ–æ›¿æ¢ä¸å…è®¸çš„å­—ç¬¦
            let cleaned = fileName
                .replace(/[<>:"/\\|?*]/g, '') // ç§»é™¤Windowsä¸å…è®¸çš„å­—ç¬¦
                .replace(/[\x00-\x1f\x80-\x9f]/g, '') // ç§»é™¤æ§åˆ¶å­—ç¬¦
                .replace(/^\.+/, '') // ç§»é™¤å¼€å¤´çš„ç‚¹
                .replace(/\.+$/, '') // ç§»é™¤ç»“å°¾çš„ç‚¹
                .replace(/\s+/g, ' ') // å¤šä¸ªç©ºæ ¼æ›¿æ¢ä¸ºå•ä¸ªç©ºæ ¼
                .replace(/\(cover.*?\)/gi, '') // ç§»é™¤coverä¿¡æ¯
                .replace(/\[.*?\]/g, '') // ç§»é™¤æ–¹æ‹¬å·å†…å®¹
                .replace(/\-.*ç”µå½±.*ä¸»é¢˜æ›²/g, '') // ç§»é™¤ç”µå½±ä¸»é¢˜æ›²ä¿¡æ¯
                .replace(/\-.*ç”µè§†å‰§.*æ›²/g, '') // ç§»é™¤ç”µè§†å‰§ç›¸å…³ä¿¡æ¯
                .trim(); // ç§»é™¤é¦–å°¾ç©ºæ ¼
            
            // å¦‚æœæ¸…ç†åä¸ºç©ºï¼Œä½¿ç”¨é»˜è®¤åç§°
            if (!cleaned) {
                cleaned = 'unknown_song';
            }
            
            // é™åˆ¶æ–‡ä»¶åé•¿åº¦
            if (cleaned.length > 100) {
                cleaned = cleaned.substring(0, 100);
            }
            
            return cleaned;
        }

        // æ˜¾ç¤ºæ¶ˆæ¯
        function showMessage(message, type = 'error') {
            const messageContainer = document.getElementById('messageContainer');
            const messageDiv = document.createElement('div');
            messageDiv.className = type === 'error' ? 'error-message' : 'success-message';
            messageDiv.textContent = message;
            
            messageContainer.innerHTML = '';
            messageContainer.appendChild(messageDiv);
            
            // 3ç§’åè‡ªåŠ¨æ¶ˆå¤±
            setTimeout(() => {
                messageDiv.remove();
            }, 3000);
        }

        // æ˜¾ç¤ºç»“æœç»Ÿè®¡
        function showResultInfo(displayCount, totalCount) {
            const resultInfo = document.getElementById('resultInfo');
            if (totalCount > MAX_RESULTS) {
                resultInfo.textContent = `æ˜¾ç¤ºå‰ ${displayCount} é¦–æ­Œæ›²ï¼Œå…±æ‰¾åˆ° ${totalCount} é¦–`;
            } else {
                resultInfo.textContent = `å…±æ‰¾åˆ° ${totalCount} é¦–æ­Œæ›²`;
            }
            resultInfo.style.display = 'block';
        }

        // æœç´¢æ­Œæ›² - è·å–åˆ—è¡¨
        async function searchSongs() {
            const searchInput = document.getElementById('searchInput');
            const loading = document.getElementById('loading');
            const songList = document.getElementById('songList');
            const searchBtn = document.getElementById('searchBtn');
            const resultInfo = document.getElementById('resultInfo');
            
            const query = searchInput.value.trim();
            if (!query) {
                showMessage('è¯·è¾“å…¥æœç´¢å†…å®¹ï¼');
                return;
            }

            // æ˜¾ç¤ºåŠ è½½çŠ¶æ€
            loading.style.display = 'block';
            songList.innerHTML = '';
            resultInfo.style.display = 'none';
            searchBtn.disabled = true;
            searchBtn.textContent = 'æœç´¢ä¸­...';
            currentSearchQuery = query;

            try {
                // ç¬¬ä¸€æ­¥ï¼šè·å–æ­Œæ›²åˆ—è¡¨ï¼ˆTEXTæ ¼å¼ï¼‰- ä½¿ç”¨Pythonæ’ä»¶çš„API
                const response = await fetch(`${API_BASE_URL}?key=${API_KEY}&msg=${encodeURIComponent(query)}&type=text&num=${MAX_RESULTS}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'text/plain'
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const textData = await response.text();
                console.log('APIè¿”å›æ•°æ®:', textData);
                
                // è§£æè¿”å›çš„æ–‡æœ¬æ•°æ®
                const allSongs = parseTextResponse(textData);
                
                if (allSongs.length === 0) {
                    showMessage('æœªæ‰¾åˆ°ç›¸å…³æ­Œæ›²ï¼Œè¯·å°è¯•å…¶ä»–å…³é”®è¯');
                    return;
                }
                
                // åªå–å‰8ä¸ªç»“æœ
                const limitedSongs = allSongs.slice(0, MAX_RESULTS);
                
                songListData = limitedSongs;
                displaySongs(limitedSongs);
                showResultInfo(limitedSongs.length, allSongs.length);
                showMessage(`æœç´¢å®Œæˆï¼`, 'success');
                
                // å¼‚æ­¥åŠ è½½å°é¢å›¾ç‰‡
                limitedSongs.forEach(song => {
                    tryLoadSongCover(song.id, song.title, song.artist);
                });
                
            } catch (error) {
                console.error('æœç´¢å¤±è´¥:', error);
                showMessage(`æœç´¢å¤±è´¥: ${error.message}`);
            } finally {
                loading.style.display = 'none';
                searchBtn.disabled = false;
                searchBtn.textContent = 'ğŸ” æœç´¢';
            }
        }

        // è§£ææ–‡æœ¬å“åº”
        function parseTextResponse(text) {
            if (!text || text.trim() === '') {
                return [];
            }

            const lines = text.split('\n').filter(line => line.trim());
            const songs = [];

            lines.forEach(line => {
                // åŒ¹é…æ ¼å¼ï¼šåºå·ã€æ­Œå -- æ­Œæ‰‹ï¼ˆä¸Pythonæ’ä»¶ä¿æŒä¸€è‡´ï¼‰
                const match = line.match(/^(\d+)ã€(.+?)\s*--\s*(.+)$/);
                if (match) {
                    songs.push({
                        id: match[1],
                        title: match[2].trim(),
                        artist: match[3].trim(),
                        platform: 'æœªçŸ¥'  // Pythonæ’ä»¶ä¸­æ²¡æœ‰platformå­—æ®µ
                    });
                }
            });

            return songs;
        }

        // è§£ææ–°æ ¼å¼çš„æ­Œæ›²è¯¦æƒ…
        function parseNewFormatResponse(text) {
            if (!text || text.trim() === '') {
                return null;
            }

            const lines = text.split('\n').filter(line => line.trim());
            const songInfo = {};

            lines.forEach(line => {
                // è§£æå°é¢å›¾ç‰‡ - æ”¯æŒå¤šç§æ ¼å¼
                const imgMatch1 = line.match(/Â±img=(.+?)Â±/);
                const imgMatch2 = line.match(/å°é¢[ï¼š:](.+)/);
                const imgMatch3 = line.match(/cover[ï¼š:](.+)/);
                
                if (imgMatch1) {
                    songInfo.cover = imgMatch1[1];
                } else if (imgMatch2) {
                    songInfo.cover = imgMatch2[1].trim();
                } else if (imgMatch3) {
                    songInfo.cover = imgMatch3[1].trim();
                }

                // è§£ææ­Œå
                if (line.startsWith('æ­Œåï¼š')) {
                    const titleMatch = line.match(/æ­Œåï¼š(.+?)(\[.+?\])?$/);
                    if (titleMatch) {
                        songInfo.title = titleMatch[1].trim();
                        if (titleMatch[2]) {
                            songInfo.platform = titleMatch[2].replace(/[\[\]]/g, '');
                        }
                        console.log('è§£æåˆ°æ­Œå:', songInfo.title);
                    } else {
                        // å¦‚æœæ­£åˆ™åŒ¹é…å¤±è´¥ï¼Œç›´æ¥å–"æ­Œåï¼š"ä¹‹åçš„å†…å®¹
                        songInfo.title = line.substring(3).trim();
                        console.log('ç›´æ¥è§£ææ­Œå:', songInfo.title);
                    }
                }

                // è§£ææ­Œæ‰‹
                if (line.startsWith('æ­Œæ‰‹ï¼š')) {
                    songInfo.singer = line.replace('æ­Œæ‰‹ï¼š', '').trim();
                }

                // è§£æè¯¦æƒ…é¡µ
                if (line.startsWith('æ­Œæ›²è¯¦æƒ…é¡µï¼š')) {
                    songInfo.link = line.replace('æ­Œæ›²è¯¦æƒ…é¡µï¼š', '').trim();
                }

                // è§£ææ’­æ”¾é“¾æ¥
                if (line.startsWith('æ’­æ”¾é“¾æ¥ï¼š')) {
                    songInfo.url = line.replace('æ’­æ”¾é“¾æ¥ï¼š', '').trim();
                }
            });

            return songInfo;
        }

        // å°è¯•è·å–æ­Œæ›²å°é¢
        async function tryLoadSongCover(songId, title, artist) {
            try {
                const songInfo = await getSongDetail(songId);
                if (songInfo && songInfo.cover) {
                    const coverImg = document.getElementById(`cover-${songId}`);
                    if (coverImg) {
                        coverImg.src = songInfo.cover;
                        coverImg.onerror = function() {
                            this.src = 'https://via.placeholder.com/80x80/333/fff?text=â™ª';
                        };
                    }
                }
            } catch (error) {
                console.log(`è·å–å°é¢å¤±è´¥ ${songId}:`, error);
            }
        }

        // æ˜¾ç¤ºæ­Œæ›²åˆ—è¡¨
        function displaySongs(songs) {
            const songList = document.getElementById('songList');
            
            songList.innerHTML = songs.map((song, index) => `
                <div class="song-item">
                    <div class="song-header">
                        <img class="song-cover" src="https://via.placeholder.com/80x80/333/fff?text=â™ª" alt="å°é¢" id="cover-${song.id}">
                        <div class="song-info">
                            <div class="song-title">${escapeHtml(song.title)}</div>
                            <div class="song-artist">${escapeHtml(song.artist)}</div>
                            <div class="song-platform">${escapeHtml(song.platform)}</div>
                        </div>
                    </div>
                    <div class="song-controls">
                        <button class="control-btn play-btn" onclick="playSong('${song.id}', '${escapeHtml(song.title)}', '${escapeHtml(song.artist)}')">
                            â–¶ï¸ æ’­æ”¾
                        </button>
                        <button class="control-btn download-btn" onclick="downloadSong('${song.id}', '${escapeHtml(song.title)}')">
                            ğŸ“¥ ä¸‹è½½
                        </button>
                        <button class="control-btn detail-btn" onclick="showDetail('${song.id}')">
                            ğŸ“‹ è¯¦æƒ…
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // HTMLè½¬ä¹‰å‡½æ•°
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // è·å–æ­Œæ›²è¯¦æƒ…ï¼ˆæ–°æ ¼å¼ï¼‰
        async function getSongDetail(songId) {
            if (!currentSearchQuery) {
                throw new Error('è¯·å…ˆæœç´¢æ­Œæ›²');
            }

            try {
                const response = await fetch(`${API_BASE_URL}?key=${API_KEY}&msg=${encodeURIComponent(currentSearchQuery)}&type=text&n=${songId}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'text/plain'
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const textData = await response.text();
                console.log('=== APIè¿”å›åŸå§‹æ•°æ® ===');
                console.log(textData);
                console.log('====================');
                
                const songInfo = parseNewFormatResponse(textData);
                console.log('è§£æåçš„æ­Œæ›²ä¿¡æ¯:', songInfo);
                
                if (!songInfo) {
                    throw new Error('æ— æ³•è§£ææ­Œæ›²ä¿¡æ¯');
                }
                
                return songInfo;
                
            } catch (error) {
                console.error('è·å–æ­Œæ›²è¯¦æƒ…å¤±è´¥:', error);
                throw error;
            }
        }

        // æ’­æ”¾æ­Œæ›²
        async function playSong(songId, title, artist) {
            const playBtn = event.target;
            const originalText = playBtn.textContent;
            playBtn.disabled = true;
            playBtn.textContent = 'è·å–ä¸­...';

            try {
                const songInfo = await getSongDetail(songId);
                
                if (songInfo.url && songInfo.url.trim() !== '') {
                    const audioPlayer = document.getElementById('audioPlayer');
                    const audioElement = document.getElementById('audioElement');
                    const playerTitle = document.getElementById('playerTitle');
                    const playerArtist = document.getElementById('playerArtist');
                    
                    playerTitle.textContent = songInfo.title || title;
                    playerArtist.textContent = songInfo.singer || artist;
                    audioElement.src = songInfo.url;
                    audioPlayer.style.display = 'block';
                    
                    // æ›´æ–°å°é¢å›¾ç‰‡
                    if (songInfo.cover) {
                        const coverImg = document.getElementById(`cover-${songId}`);
                        if (coverImg) {
                            coverImg.src = songInfo.cover;
                            coverImg.onerror = function() {
                                this.src = 'https://via.placeholder.com/80x80/333/fff?text=â™ª';
                            };
                        }
                    }
                    
                    // å°è¯•è‡ªåŠ¨æ’­æ”¾
                    try {
                        await audioElement.play();
                        showMessage('å¼€å§‹æ’­æ”¾', 'success');
                    } catch (playError) {
                        console.log('è‡ªåŠ¨æ’­æ”¾å¤±è´¥ï¼Œéœ€è¦ç”¨æˆ·æ‰‹åŠ¨æ’­æ”¾:', playError);
                        showMessage('è¯·æ‰‹åŠ¨ç‚¹å‡»æ’­æ”¾æŒ‰é’®', 'success');
                    }
                } else {
                    showMessage('æ— æ³•è·å–æ’­æ”¾é“¾æ¥ï¼Œè¯¥æ­Œæ›²å¯èƒ½æš‚æ—¶ä¸å¯ç”¨');
                }
                
            } catch (error) {
                console.error('æ’­æ”¾å¤±è´¥:', error);
                showMessage(`æ’­æ”¾å¤±è´¥: ${error.message}`);
            } finally {
                playBtn.disabled = false;
                playBtn.textContent = originalText;
            }
        }

        // ä¸‹è½½æ­Œæ›²
        async function downloadSong(songId, title) {
            const downloadBtn = event.target;
            const originalText = downloadBtn.textContent;
            downloadBtn.disabled = true;
            downloadBtn.textContent = 'è·å–ä¸­...';

            try {
                const songInfo = await getSongDetail(songId);
                
                if (songInfo.url && songInfo.url.trim() !== '') {
                    downloadBtn.textContent = 'ä¸‹è½½ä¸­...';
                    
                    // ä¼˜å…ˆä½¿ç”¨APIè¿”å›çš„æ­Œåï¼Œå¦‚æœæ²¡æœ‰åˆ™ä½¿ç”¨æœç´¢ç»“æœä¸­çš„æ­Œå
                    const songTitle = songInfo.title || title;
                    const cleanTitle = cleanFileName(songTitle);
                    const fileName = `${cleanTitle}.mp3`;
                    
                    console.log('=== ä¸‹è½½è°ƒè¯•ä¿¡æ¯ ===');
                    console.log('APIè¿”å›æ­Œå:', songInfo.title);
                    console.log('æœç´¢ç»“æœæ­Œå:', title);
                    console.log('ä½¿ç”¨çš„æ­Œå:', songTitle);
                    console.log('æ¸…ç†åæ–‡ä»¶å:', cleanTitle);
                    console.log('æœ€ç»ˆæ–‡ä»¶å:', fileName);
                    console.log('ä¸‹è½½URL:', songInfo.url);
                    console.log('==================');
                    
                    try {
                        // æ–¹æ³•1: ä½¿ç”¨fetchä¸‹è½½å¹¶åˆ›å»ºblobï¼ˆæ¨èï¼‰
                        const response = await fetch(songInfo.url, {
                            method: 'GET',
                            headers: {
                                'Accept': 'audio/mpeg, audio/mp3, audio/*',
                                'Cache-Control': 'no-cache'
                            }
                        });
                        
                        if (!response.ok) {
                            throw new Error(`ä¸‹è½½å¤±è´¥: ${response.status}`);
                        }
                        
                        const blob = await response.blob();
                        const url = window.URL.createObjectURL(blob);
                        
                        // åˆ›å»ºä¸‹è½½é“¾æ¥ï¼Œå¼ºåˆ¶ä½¿ç”¨æ­£ç¡®çš„æ–‡ä»¶å
                        const link = document.createElement('a');
                        link.href = url;
                        link.download = fileName;
                        link.style.display = 'none';
                        
                        // æ·»åŠ åˆ°é¡µé¢å¹¶è§¦å‘ä¸‹è½½
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                        
                        // æ¸…ç†URLå¯¹è±¡
                        setTimeout(() => {
                            window.URL.revokeObjectURL(url);
                        }, 1000);
                        
                        showMessage(`ä¸‹è½½å®Œæˆï¼š${fileName}`, 'success');
                        
                    } catch (fetchError) {
                        console.log('Fetchä¸‹è½½å¤±è´¥ï¼Œå°è¯•ç›´æ¥ä¸‹è½½:', fetchError);
                        
                        // æ–¹æ³•2: ç›´æ¥ä¸‹è½½ï¼ˆå¤‡ç”¨æ–¹æ¡ˆï¼‰- å¼ºåˆ¶è®¾ç½®æ–‡ä»¶å
                        const link = document.createElement('a');
                        link.href = songInfo.url;
                        link.download = fileName; // å¼ºåˆ¶ä½¿ç”¨æ­£ç¡®çš„æ–‡ä»¶å
                        link.target = '_blank';
                        link.rel = 'noopener noreferrer';
                        
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                        
                        showMessage(`ä¸‹è½½å¼€å§‹ï¼š${fileName}`, 'success');
                    }
                } else {
                    showMessage('æ— æ³•è·å–ä¸‹è½½é“¾æ¥ï¼Œè¯¥æ­Œæ›²å¯èƒ½æš‚æ—¶ä¸å¯ç”¨');
                }
                
            } catch (error) {
                console.error('ä¸‹è½½å¤±è´¥:', error);
                showMessage(`ä¸‹è½½å¤±è´¥: ${error.message}`);
            } finally {
                downloadBtn.disabled = false;
                downloadBtn.textContent = originalText;
            }
        }

        // æ˜¾ç¤ºæ­Œæ›²è¯¦æƒ…
        async function showDetail(songId) {
            const detailBtn = event.target;
            const originalText = detailBtn.textContent;
            detailBtn.disabled = true;
            detailBtn.textContent = 'è·å–ä¸­...';

            try {
                const songInfo = await getSongDetail(songId);
                
                let detailText = `æ­Œæ›²è¯¦æƒ…ï¼š\n`;
                detailText += `æ­Œåï¼š${songInfo.title || 'æœªçŸ¥'}\n`;
                detailText += `æ­Œæ‰‹ï¼š${songInfo.singer || 'æœªçŸ¥'}\n`;
                detailText += `å¹³å°ï¼š${songInfo.platform || 'æœªçŸ¥'}\n`;
                if (songInfo.link) {
                    detailText += `è¯¦æƒ…é¡µï¼š${songInfo.link}\n`;
                }
                
                alert(detailText);
                
                // æ›´æ–°å°é¢å›¾ç‰‡
                if (songInfo.cover) {
                    const coverImg = document.getElementById(`cover-${songId}`);
                    if (coverImg) {
                        coverImg.src = songInfo.cover;
                        coverImg.onerror = function() {
                            this.src = 'https://via.placeholder.com/80x80/333/fff?text=â™ª';
                        };
                    }
                }
                
            } catch (error) {
                console.error('è·å–è¯¦æƒ…å¤±è´¥:', error);
                showMessage(`è·å–è¯¦æƒ…å¤±è´¥: ${error.message}`);
            } finally {
                detailBtn.disabled = false;
                detailBtn.textContent = originalText;
            }
        }

        // å…³é—­æ’­æ”¾å™¨
        function closePlayer() {
            const audioPlayer = document.getElementById('audioPlayer');
            const audioElement = document.getElementById('audioElement');
            
            audioElement.pause();
            audioElement.src = '';
            audioPlayer.style.display = 'none';
        }

